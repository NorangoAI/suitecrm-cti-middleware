# ================================================
# CTI Middleware Environment Configuration
# ================================================
# Copy this file to .env and fill in your values

# ================================================
# Server Configuration
# ================================================
NODE_ENV=development
PORT=3000
WS_PORT=3001
API_PREFIX=/cti-middleware

# ================================================
# FreePBX/Asterisk AMI Configuration
# ================================================
# Asterisk Manager Interface credentials
# Configure in FreePBX: Settings > Asterisk Manager Users
AMI_HOST=localhost
AMI_PORT=5038
AMI_USERNAME=admin
AMI_SECRET=your_ami_secret_here

# ================================================
# ElevenLabs Webhook Configuration
# ================================================
# Get from ElevenLabs dashboard when creating webhook
# Leave empty to skip signature verification (dev only)
ELEVENLABS_WEBHOOK_SECRET=your_elevenlabs_webhook_secret_here

# ================================================
# SuiteCRM API Configuration
# ================================================
# Base URL of your SuiteCRM instance
SUITECRM_URL=

# OAuth2 credentials from SuiteCRM: Admin > OAuth2 Clients
# REQUIRED for authentication
SUITECRM_CLIENT_ID=
SUITECRM_CLIENT_SECRET=

# SuiteCRM user credentials (OPTIONAL)
# Only needed for password grant type authentication
# If not provided, will use client_credentials grant
# SUITECRM_USERNAME=admin
# SUITECRM_PASSWORD=your_password_here

# ================================================
# Security Configuration
# ================================================
# Generate secure key: openssl rand -hex 32
API_KEY=your_secure_api_key_here

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# Logging Configuration
# ================================================
# Levels: error, warn, info, debug, verbose
LOG_LEVEL=info
LOG_DIR=./logs

# ================================================
# Notes
# ================================================
# 1. Never commit the .env file to version control
# 2. Use different credentials for each environment
# 3. Rotate credentials regularly
# 4. Use HTTPS in production
# 5. Keep this file secure with appropriate permissions: chmod 600 .env

